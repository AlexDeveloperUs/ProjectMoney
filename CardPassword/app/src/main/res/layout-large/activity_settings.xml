<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_usage_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_fifty"
        android:layout_marginStart="@dimen/margin_twenty"
        android:layout_marginLeft="@dimen/margin_twenty"
        android:layout_marginTop="@dimen/margin_fifty"
        android:layout_marginEnd="@dimen/margin_twenty"
        android:layout_marginRight="@dimen/margin_twenty"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_usage_short_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:text="@string/text_short_password_usage"
            android:textSize="@dimen/sp_twenty_three" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:clickable="false"
            android:focusable="false" />
    </FrameLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_background"
        android:padding="@dimen/margin_twenty"
        android:text="@string/text_change_short_password"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_twenty_three"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_usage_pass" />

    <ImageView
        android:id="@+id/fab_settings"
        style="@style/LargeFloatingActionButton"
        android:background="@drawable/back_button_selector"
        android:contentDescription="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>