<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_thirty"
        android:text="@string/text_confirm"
        android:textSize="@dimen/sp_twenty_five"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_pass_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline_auth_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/first_void_circle_create"
            style="@style/LargeCircleImage"
            android:src="@drawable/void_circle" />

        <ImageView
            android:id="@+id/second_void_circle_create"
            style="@style/LargeCircleImage"
            android:src="@drawable/void_circle" />

        <ImageView
            android:id="@+id/third_void_circle_create"
            style="@style/LargeCircleImage"
            android:src="@drawable/void_circle" />

        <ImageView
            android:id="@+id/fourth_void_circle_create"
            style="@style/LargeCircleImage"
            android:src="@drawable/void_circle" />
    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_auth_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <ImageButton
        android:id="@+id/btn_one_check_pass"
        style="@style/LargeDigitImageButtons"
        android:layout_marginTop="@dimen/margin_sixty_five"
        android:background="@drawable/one_button_selector"
        android:contentDescription="@string/_1"
        app:layout_constraintRight_toLeftOf="@id/btn_two_check_pass"
        app:layout_constraintTop_toTopOf="@id/guideline_auth_create" />

    <ImageButton
        android:id="@+id/btn_two_check_pass"
        style="@style/LargeDigitImageButtons"
        android:layout_marginTop="@dimen/margin_sixty_five"
        android:background="@drawable/two_button_selector"
        android:contentDescription="@string/_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_auth_create" />

    <ImageButton
        android:id="@+id/btn_three_check_pass"
        style="@style/LargeDigitImageButtons"
        android:layout_marginTop="@dimen/margin_sixty_five"
        android:background="@drawable/three_button_selector"
        android:contentDescription="@string/_3"
        app:layout_constraintLeft_toRightOf="@id/btn_two_check_pass"
        app:layout_constraintTop_toBottomOf="@id/guideline_auth_create" />

    <ImageButton
        android:id="@+id/btn_four_check_pass"
        style="@style/LargeDigitImageButtons"
        android:background="@drawable/four_button_selector"
        android:contentDescription="@string/_4"
        app:layout_constraintEnd_toStartOf="@+id/btn_five_check_pass"
        app:layout_constraintTop_toBottomOf="@+id/btn_one_check_pass" />

    <ImageButton
        android:id="@+id/btn_five_check_pass"
        style="@style/LargeDigitImageButtons"
        android:background="@drawable/five_button_selector"
        android:contentDescription="@string/_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_two_check_pass" />

    <ImageButton
        android:id="@+id/btn_six_check_pass"
        style="@style/LargeDigitImageButtons"
        android:background="@drawable/six_button_selector"
        android:contentDescription="@string/_6"
        app:layout_constraintStart_toEndOf="@+id/btn_five_check_pass"
        app:layout_constraintTop_toBottomOf="@+id/btn_three_check_pass" />

    <ImageButton
        android:id="@+id/btn_seven_check_pass"
        style="@style/LargeDigitImageButtons"
        android:background="@drawable/seven_button_selector"
        android:contentDescription="@string/_7"
        app:layout_constraintRight_toLeftOf="@id/btn_eight_check_pass"
        app:layout_constraintTop_toBottomOf="@id/btn_four_check_pass" />

    <ImageButton
        android:id="@+id/btn_eight_check_pass"
        style="@style/LargeDigitImageButtons"
        android:background="@drawable/eight_button_selector"
        android:contentDescription="@string/_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_five_check_pass" />

    <ImageButton
        android:id="@+id/btn_nine_check_pass"
        style="@style/LargeDigitImageButtons"
        android:background="@drawable/nine_button_selector"
        android:contentDescription="@string/_9"
        app:layout_constraintLeft_toRightOf="@id/btn_eight_check_pass"
        app:layout_constraintTop_toBottomOf="@id/btn_six_check_pass" />

    <ImageButton
        android:id="@+id/btn_zero_check_pass"
        style="@style/LargeDigitImageButtons"
        android:background="@drawable/zero_button_selector"
        android:contentDescription="@string/_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_eight_check_pass" />

    <ImageButton
        android:id="@+id/btn_backspace_check_pass"
        style="@style/LargeDigitImageButtons"
        android:background="@drawable/remove_selector"
        android:contentDescription="@string/delete"
        app:layout_constraintLeft_toRightOf="@id/btn_zero_check_pass"
        app:layout_constraintTop_toBottomOf="@id/btn_nine_check_pass" />
</android.support.constraint.ConstraintLayout>