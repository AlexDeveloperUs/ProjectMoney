<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/frame_usage_pass"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:layout_marginStart="@dimen/margin_medium">

        <TextView
            android:id="@+id/text_usage_short_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_short_password_usage"
            android:textSize="@dimen/text_size_medium"
            android:layout_gravity="center_vertical|start"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:clickable="false"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/item_radius"
            android:layout_marginRight="@dimen/item_radius"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/frame_change_pass"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/frame_usage_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:layout_marginStart="@dimen/margin_medium"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_change_pass"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/text_change_short_password"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/fab_settings"
        android:layout_width="@dimen/margin_extra_large"
        android:layout_height="@dimen/margin_extra_large"
        android:layout_margin="@dimen/margin_half_extra_large"
        android:background="@drawable/back_button_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>