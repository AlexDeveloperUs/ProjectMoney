<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/card_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rectangle_rounded"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="H, 96:61"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/hor_frag" />

    <android.support.constraint.Guideline
        android:id="@+id/hor_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/action_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_delete"
        app:backgroundTint="#adadea"
        app:layout_constraintTop_toBottomOf="@id/card_fragment"
        app:layout_constraintRight_toRightOf="@id/ver_frag"
        app:maxImageSize="35dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/action_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_edit"
        app:backgroundTint="#adadea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ver_frag"
        app:maxImageSize="35dp" />

    <android.support.constraint.Guideline
        android:id="@+id/ver_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_fragment_vertical_left_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_card_fragment_vertical_right_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <TextView
        android:id="@+id/text_card_number_card_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/text_view_card_number"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/card_fragment"
        app:layout_constraintRight_toRightOf="@id/card_fragment"
        app:layout_constraintTop_toTopOf="@id/card_fragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_cvc"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toTopOf="@id/text_card_cvc_card_fragment"
        app:layout_constraintLeft_toLeftOf="@id/guideline_fragment_vertical_left_side" />

    <TextView
        android:id="@+id/text_card_cvc_card_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/text_view_cvc"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/guideline_fragment_vertical_left_side"
        app:layout_constraintTop_toBottomOf="@id/text_card_number_card_fragment"
        app:layout_constraintBottom_toBottomOf="@id/card_fragment"/>

    <TextView
        android:id="@+id/text_card_validity_card_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:text="@string/text_view_validity"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_card_number_card_fragment"
        app:layout_constraintRight_toRightOf="@id/guideline_card_fragment_vertical_right_side"
        app:layout_constraintBottom_toBottomOf="@id/card_fragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_valid_thru"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/text_card_validity_card_fragment"
        app:layout_constraintRight_toRightOf="@id/guideline_card_fragment_vertical_right_side" />

    <TextView
        android:id="@+id/text_card_holder_name_card_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_card_holder_name"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/card_fragment"
        app:layout_constraintLeft_toLeftOf="@id/guideline_fragment_vertical_left_side"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/text_card_holder_surname_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/text_view_card_holder_surname"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/card_fragment"
        app:layout_constraintLeft_toRightOf="@id/text_card_holder_name_card_fragment"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/image_card_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_extra_large"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/card_fragment"
        app:layout_constraintRight_toRightOf="@id/card_fragment"
        android:layout_marginEnd="@dimen/margin_extra_large" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/pin"
        app:layout_constraintTop_toBottomOf="@id/text_card_number_card_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/image_pin_card_fragment"
        android:layout_marginTop="@dimen/margin_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_pin_card_fragment"
        app:layout_constraintRight_toRightOf="@id/image_pin_card_fragment"
        app:layout_constraintBottom_toBottomOf="@id/image_pin_card_fragment"
        android:text="****"
        android:textColor="#000"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="15dp" />
</android.support.constraint.ConstraintLayout>