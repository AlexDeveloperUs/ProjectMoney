<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_back_view_stub"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_21sdp"
        android:background="@drawable/back_button_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/image_add_view_stub"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_21sdp"
        android:background="@drawable/add_button_selector"
        app:layout_constraintBottom_toTopOf="@id/image_back_view_stub"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/image_settings_view_stub"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_21sdp"
        android:background="@drawable/settings_button_selector"
        app:layout_constraintBottom_toTopOf="@id/image_add_view_stub"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>