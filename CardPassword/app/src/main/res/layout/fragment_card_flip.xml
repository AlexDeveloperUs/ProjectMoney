<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/asdasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/flip_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flipDuration="400"
        app:flipEnabled="true"
        app:flipFrom="front"
        app:flipOnTouch="false"
        app:flipType="horizontal"
        app:layout_constraintBottom_toTopOf="@id/action_button_edit_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/asdasd">

        <include layout="@layout/back_card_layout" />

        <include layout="@layout/front_card_layout" />
    </com.wajahatkarim3.easyflipview.EasyFlipView>

    <ImageView
        android:id="@+id/action_button_delete_fragment"
        android:layout_width="@dimen/margin_extra_large"
        android:layout_height="@dimen/margin_extra_large"
        android:layout_marginEnd="@dimen/margin_half_extra_large"
        android:layout_marginRight="@dimen/margin_half_extra_large"
        android:layout_marginBottom="@dimen/margin_half_extra_large"
        android:background="@drawable/delete_button_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline_vertical_fragment" />

    <ImageView
        android:id="@+id/action_button_edit_fragment"
        android:layout_width="@dimen/margin_extra_large"
        android:layout_height="@dimen/margin_extra_large"
        android:layout_marginStart="@dimen/margin_half_extra_large"
        android:layout_marginLeft="@dimen/margin_half_extra_large"
        android:layout_marginBottom="@dimen/margin_half_extra_large"
        android:background="@drawable/edit_button_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_fragment" />
</android.support.constraint.ConstraintLayout>